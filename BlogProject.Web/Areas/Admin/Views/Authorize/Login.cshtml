    <style>
        body {
            background-color: #E5C287;
            font-family: 'Public Sans', sans-serif;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            margin: 0;
        }

        /* Kartı tam ekran genişliğinde yapalım */
        .card {
            background-color: #F4EDCC;
            width: 100%;
            display: flex;
            flex-direction: row;
            justify-content: center;
            margin-bottom: 20px; /* Kart ve footer arasında boşluk */
        }

        .card-body {
            padding: 20px; /* Kart içeriğini hizalama */
        }

        .card-image {
            flex: 1;
            overflow: hidden; /* Resmin dışına taşan kısımları gizler */
        }

            .card-image img {
                width: 100%;
                height: auto;
                display: block;
            }

        /* Form bölümünü ayarlayalım */
        .card-form {
            flex: 1;
            padding: 20px; /* Formun içeriğini biraz içeri alalım */
        }

            /* Form alanlarını düzenleyelim */
            .card-form input,
            .card-form textarea {
                width: 100%;
                margin-bottom: 10px;
            }

            /* Kaydol butonunu genişletelim */
            .card-form button {
                width: 100%;
            }

        footer {
            background-color: #F4EDCC;
            padding: 10px 0;
            border-top: 1px solid #ddd;
            width: 100%;
            text-align: center;
            margin-top: 50px; /* Footer ve kart arasında boşluk */
        }

            footer ul {
                list-style: none;
                padding: 0;
            }

                footer ul li {
                    display: inline;
                    margin-right: 10px;
                }

            footer a {
                color: #DEAC80;
                text-decoration: none;
            }

                footer a:hover {
                    color: #4a90e2;
                }
    </style>



</head>

<body>

    <!-- Content -->


    <div class="authentication-wrapper" style="display: flex; justify-content: center; margin-top: 50px;">
        
        <div class="authentication-inner" style="width:600px;">
            <div class="container">
                <div class="card-container" style="padding: 10px;">
                    <!-- Kart -->
                    <div class="card" style="width:500px;">
                        
                        <div class="card-body">
                            <!-- İçerik -->
                            <h4 class="mb-2">Blog_Blog Sitesine Hoş Geldiniz 👋</h4>
                           @*  <div class="row mb-3"> *@
                                <div class="col-md-6 text-center">
                                <img src="~/sneat/assets/img/about3.png" alt="About Image" class="img-fluid" style="max-width: 450px;margin: 0 auto;">
                                </div>
                                <!-- Kayıt Formu -->
                                @* <div class="col-md-6"> *@
                            <form asp-controller="Authorize" asp-action="Login" id="formAuthentication" class="mb-3" method="post">
                                <div asp-validation-summary="All"></div>
                                <div class="mb-3">
                                    <label asp-for="@Model.Email" for="email" class="form-label">Email Adresi</label>
                                    <input asp-for="@Model.Email" type="email" class="form-control" id="email" name="email" placeholder="Email adresinizi giriniz" autofocus>
                                    <span asp-validation-for="Email"></span>
                                </div>
                                <div class="mb-3 form-password-toggle">
                                    <div class="d-flex justify-content-between">
                                        <label class="form-label" for="password">Şifre</label>
                                    </div>
                                    <div class="input-group input-group-merge">
                                        <input asp-for="@Model.Password" type="password" id="password" class="form-control" name="password" placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;" aria-describedby="password" />
                                        <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                                        <span asp-validation-for="Email"></span>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <div class="form-check">
                                        <input asp-for="@Model.RememberMe" class="form-check-input" type="checkbox" id="remember-me">
                                        <label asp-for="@Model.RememberMe" class="form-check-label" for="remember-me">
                                            Beni Hatırla
                                        </label>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <button class="btn btn-primary d-grid w-100" type="submit">Giriş Yap</button>
                                </div>
                            </form>
                            <p class="text-center">
                                <span>Sitemizde yeni misin?</span>
                                <a asp-area="" asp-controller="Register" asp-action="Register">
                                    <span>Üye Ol</span>
                                </a>
                            </p>
                        </div>
                    </div>
                    <!-- /Kart -->
                </div>
            </div>
        </div>
    </div>
