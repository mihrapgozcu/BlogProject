@model List<CategoryVM>

<div class="container-xxl flex-grow-1 container-p-y">


    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light"> Kategori Yönetimi /</span> Kategoriler
    </h4>

    <!-- Basic Bootstrap Table -->
    <div class="card">
        <div class="table-responsive text-nowrap m-3">

            @{
                @if (User.IsInRole($"{RoleConsts.Admin}"))
                {
                    <a class="btn btn-primary mb-3" asp-area="Admin" asp-controller="Category" asp-action="Create">
                        Kategori Ekle <i class="bx bx-plus"></i>
                    </a>
                }
            }

            <table class="table table-bordered" id="categoriesTable" width="100%" collspacing="0">
                <thead>
                    <tr>
                        <th>İsim</th>
                        <th>Oluşturulma Tarihi</th>
                        <th>Yazar</th>
                        <th>Durum</th>
                        @{
                            @if (User.IsInRole($"{RoleConsts.Admin}"))
                            {
                                <th>İşlemler</th>
                            }
                        }
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var item in Model)
                    {
                        <tr name="@item.Id">
                            <td> @item.Name </td>
                            <td> @item.CreatedDate.ToShortDateString() </td>
                            <td> @item.CreatedBy </td>
                            <td> @(item.IsDeleted ? "Aktif Değil" : "Aktif") </td>
                            @{
                                @if (User.IsInRole($"{RoleConsts.Admin}"))
                                {
                                    <td>
                                        <a class="btn btn-primary btn-sm" data-id="@item.Id" asp-area="Admin" asp-controller="Category" asp-action="Update" asp-route-id="@item.Id">
                                            <i class="bx bxs-edit"></i>
                                        </a>

                                        <a class="btn btn-danger btn-sm" data-id="@item.Id" asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id">
                                            <i class="bx bx-minus-circle"></i>
                                        </a>
                                    </td>
                                }
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>

@section Scripts{
    <script src="~/js/categoryIndex.js" type="application/ecmascript"></script>
}