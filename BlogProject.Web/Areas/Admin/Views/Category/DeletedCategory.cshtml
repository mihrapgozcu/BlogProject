@model List<CategoryVM>

<div class="container-xxl flex-grow-1 container-p-y">


    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light"> Çöp Kutusu /</span> Kategoriler
    </h4>

    <!-- Basic Bootstrap Table -->
    <div class="card">
        <div class="table-responsive text-nowrap m-3">

            <table class="table table-bordered" id="categoriesTable" width="100%" collspacing="0">
                <thead>
                    <tr>
                        <th>İsim</th>
                        <th>Oluşturulma Tarihi</th>
                        <th>Yazar</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var item in Model)
                    {
                        <tr name="@item.Id">
                            <td> @item.Name </td>
                            <td> @item.CreatedDate.ToShortDateString() </td>
                            <td> @item.CreatedBy </td>
                            <td> @(item.IsDeleted ? "Aktif Değil" : "Aktif") </td>
                            <td>
                                <a class="btn btn-warning btn-sm" data-id="@item.Id" asp-area="Admin" asp-controller="Category" asp-action="UndoDeleted" asp-route-id="@item.Id">
                                    <i class="bx bx-undo"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>

@section Scripts{
    <script src="~/js/categoryIndex.js" type="application/ecmascript"></script>
}